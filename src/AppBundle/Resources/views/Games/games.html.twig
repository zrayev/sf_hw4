{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1> Games </h1>
    <div class="count">
        All games - {{ pagination.getTotalItemCount }}
    </div>
    <a href="{{ path('game_create') }}">Add game</a>
    <hr>
    {% for game in pagination %}
        {% for team in game.teams %}
           <p> {{ team.country.name }}</p>
        {% endfor %}
        {{ game.score }}
        <p>{{ game.date|date('Y-m-d') }}</p>
        <a href="{{ path('game_edit', {'id': game.id}) }}">Edit</a>
        <a href="{{ path('game_delete', {'id': game.id}) }}">Delete</a>
        <hr>
    {% endfor %}

    <div class="navigation">
    {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}