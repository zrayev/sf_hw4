{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h3>{{ team.name }}</h3>
    <div>
        <ul>
        {% for id, player in team.players %}
            <li><a href="{{ path('player', {'country': team.code, 'id': id}) }}"> {{ player.name }}</a></li>
        {% endfor %}
        </ul>
    </div>
    <div>Coach: <a href="{{ path('coach', {'country': team.code}) }}"> {{ team.coach.name }}</a></div>
    <div>
        <ul>
        {% for game in team.games %}
            <li>{{ game.name }}: {{ game.score }}</li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}